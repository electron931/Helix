<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="defaultTemplate"
                template="/WEB-INF/templates/template.jsp">

        <put-attribute name="title" expression="${title}"/>

        <put-attribute name="header" value="/WEB-INF/templates/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/templates/footer.jsp" />

    </definition>


    <definition name="adminTemplate"
                template="/WEB-INF/templates/admin/template.jsp">

        <put-attribute name="adminTitle" expression="${title}"/>

        <put-attribute name="adminHeader" value="/WEB-INF/templates/admin/header.jsp" />

    </definition>



</tiles-definitions>